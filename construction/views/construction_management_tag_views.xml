<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define the action -->
    <record id="construction_management_tag_action" model="ir.actions.act_window">
        <field name="name">Construction Tags</field>
        <field name="res_model">construction.management.tag</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <!-- Tree View -->
    <record id="construction_management_tag_view_tree" model="ir.ui.view">
        <field name="name">construction.management.tag.form</field>
        <field name="model">construction.management.tag</field>
        <field name="arch" type="xml">
            <tree string="Tag" editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="construction_management_tag_view_form" model="ir.ui.view">
        <field name="name">construction.management.tag.form</field>
        <field name="model">construction.management.tag</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
